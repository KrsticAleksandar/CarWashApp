<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarWashApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarWashApplication.styles.css" asp-append-version="true" />
</head>
<body>
   <header>
      <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
          <a href="#" class="navbar-brand mb-1" id="logo">
             <img src="../images/logo.png" alt="Eco Car Wash Logo" width="110" height="50" class="d-inline-block align-top mt-1">            
          </a>
           
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navmenu"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
  
          <div class="collapse navbar-collapse" id="navmenu">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a href="#aboutUs" class="nav-link px-3 fs-5 heder-link">About us</a>
              </li>
              <li class="nav-item">
                <a href="#contactUs" class="nav-link px-3 fs-5 heder-link">Contact us</a>
              </li>              
            </ul>          
          </div>
          <partial name="_LoginPartial" />
        </div>
      </nav>
     </header>

    @RenderBody();
   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/app.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
